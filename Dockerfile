# استخدم صورة Node.js الرسمية كصورة أساسية
FROM node:14

# تعيين مجلد العمل داخل الحاوية
WORKDIR /usr/src/app

# نسخ ملفات المشروع إلى مجلد العمل في الحاوية
COPY package*.json ./

# تثبيت التبعيات
RUN npm install

# نسخ جميع الملفات إلى مجلد العمل
COPY . .

# تعيين البورت الذي سيعمل عليه الخادم داخل الحاوية
EXPOSE 3000

# الأمر الذي سيشغل الخادم عند بدء الحاوية
CMD ["node", "server.js"]
